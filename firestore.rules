rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ======================================
    // USER PROFILES
    // ======================================
    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ======================================
    // USER PROGRAMS
    // ======================================
    // Programs are stored under users/{userId}/programs
    // Users can only access their own programs
    match /users/{userId}/programs/{programId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ======================================
    // USER COMPLETED SETS
    // ======================================
    // Track completed exercises per user
    match /users/{userId}/completedSets/{setId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ======================================
    // DEFAULT DENY
    // ======================================
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
